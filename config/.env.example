# Weave 环境变量配置模板
# 复制此文件为 .env 并填充实际值
# 注意：.env 文件应添加到 .gitignore 以避免敏感信息泄露

# 配置文件路径（可选）
# CONFIG_PATH="./config/production.yaml"

# 数据库配置（敏感信息）
# 数据库驱动类型：mysql（默认）或 postgres
DB_DRIVER="mysql"
DB_HOST="localhost"
DB_PORT="3306" # MySQL默认端口为3306，PostgreSQL默认端口为5432
DB_USERNAME="your_database_username"
DB_PASSWORD="your_database_password"
DB_NAME="weave"

# JWT配置（敏感信息）
JWT_SECRET="your_secure_jwt_secret_key_change_this_in_production"
JWT_ACCESS_TOKEN_EXPIRY="60"       # 分钟
JWT_REFRESH_TOKEN_EXPIRY="168"     # 小时（7天）

# 服务器配置
SERVER_PORT="8081"

# 开发模式
DEV_MODE="false"

# 日志配置
LOG_LEVEL="info"
LOG_OUTPUT_PATH="stdout"
LOG_ERROR_PATH="stderr"

# CSRF配置
CSRF_ENABLED="true"
CSRF_COOKIE_NAME="XSRF-TOKEN"
CSRF_HEADER_NAME="X-CSRF-Token"
CSRF_TOKEN_LENGTH="32"
CSRF_COOKIE_MAX_AGE="604800"        # 7天（秒）
CSRF_COOKIE_PATH="/"
CSRF_COOKIE_DOMAIN=""
CSRF_COOKIE_SECURE="false"         # 生产环境应设为true
CSRF_COOKIE_HTTP_ONLY="false"
CSRF_COOKIE_SAME_SITE="Lax"

# 插件配置
PLUGINS_DIR="./plugins"
PLUGINS_WATCHER_ENABLED="true"
PLUGINS_SCAN_INTERVAL="5"
PLUGINS_HOT_RELOAD="true"

# Prometheus配置（用于应用自身的指标暴露）
PROMETHEUS_ENABLED="true"
PROMETHEUS_METRICS_PATH="/metrics"
PROMETHEUS_ENABLE_GO_METRICS="true"
PROMETHEUS_ENABLE_HTTP_METRICS="true"

# 邮件服务配置 
EMAIL_SMTP_SERVER="smtp.qq.com"
EMAIL_SMTP_PORT="587"
EMAIL_USERNAME=""
EMAIL_PASSWORD="your_email_authorization_code"    # 授权/验证码
EMAIL_FROM=""   # 发送方邮箱  